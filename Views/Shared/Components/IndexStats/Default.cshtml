@model BetSystem.Controllers.Resources.Statistics

@{ string currency = ViewBag.Currency; }

<div class="row">
    <h4 class="jumbotron weekly-profit" style="margin-bottom: 35px;">Weekly Profit:&nbsp;&nbsp; 
        @if(Model.WeeklyProfit < 0) {
            <span>-@currency@Math.Abs(Model.WeeklyProfit)</span>
        } else {
            @currency@Model?.WeeklyProfit
        }
    </h4>
    <div class="total-profit col-xs-6 col-sm-6 col-md-6">
        <h4>TOTAL</h4>
        <table>
            <tr>
                <td>Betting</td><td>@currency@Model?.TotalBet</td>
            </tr>
            <tr>
                <td>Earning</td><td>@currency@Model?.TotalEarn</td>
            </tr>
            <tr>
                <td>Profit</td>
                @if(Model.Profit < 0) {
                    <td style="color: #fff">-@currency@Math.Abs(Model.Profit)</td> 
                } else {
                    <td style="color: #fff">@currency@Math.Round(Model.Profit,2)</td>
                }
            </tr>
            <tr>
                <td>Matches</td><td>@Model?.TotalMatches</td>
            </tr>
            <tr>
                <td>Won</td><td>@Model?.TotalWon</td>
            </tr>
            <tr>
                <td>Won %</td><td>@Model?.WonPercentage%</td>
            </tr>
        </table>
    </div>
    <div class="max-stats col-xs-6 col-sm-6 col-md-6">
        <h4>MAX</h4>
        <table>
            <tr>
                <td>Stake</td><td>@currency@Model?.MaxStake</td>
            </tr>
            <tr>
                <td>Return</td><td>@currency@Model?.MaxReturn</td>
            </tr>
            <tr>
                <td>Odd</td><td>@Model?.MaxOdd</td>
            </tr>
        </table>
    </div>
</div>